                         answerConceptId="CIEL:163206" answerCode="Analgesic"
                         style="checkbox" commentFieldCode="zl.familyHistoryRelativeCheckboxes.specifyLabel" />
                </div>

                <repeat with="['Mechanical ventilator','CIEL:165998'],
                              ['Mask','CIEL:165989'],
                              ['Mask with non-re-breather','CIEL:165990']">
                    <obs conceptId="CIEL:165995"
                         answerConceptId="{1}" answerCode="{0}"
                         style="checkbox"/>
                </repeat>
                <br/>

                <repeat with="['Nasal cannula','CIEL:165893'],
                              ['CPAP','CIEL:165944'],
